<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="style.css" rel="stylesheet" />
    <script src="interface.js" defer></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />
    <title>To-do-app</title>
  </head>
  <body>
    <div class="current-tasks">
      <h2>Tasks:</h2>
      <ul>
        <% for(var i = 0; i < tasks.length; i++) {%>
        <li>
          <div id="<%= tasks[i]._id%>" class="task">
            <p class="task-description"><%= tasks[i].taskDescription %></p>
            <form action="/" method="put" class="edit hidden">
              <textarea class="task-description" >
 <%= tasks[i].taskDescription %></textarea
              >
              <button class="btn edit" type="submit">Edit</button>
            </form>
            <div class="task-controls">
              <i class="bi bi-pencil-square modify" title="edit"></i>
              <i class="bi bi-x-circle modify" title="delete"></i>
            </div>
          </div>
        </li>
        <% } %>
      </ul>
    </div>

    <div class="add-tasks">
      <h2>Add a new Task</h2>
      <form action="/" method="post">
        <textarea placeholder="New Task..." name="taskDescription"></textarea>
        <button type="submit">Submit task</button>
      </form>
    </div>
  </body>
</html>
